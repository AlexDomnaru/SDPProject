@model RiderDetailsModel

@{
    ViewData["Title"] = "PersonalInformation2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PersonalInformation2</h2>

<h4>RiderDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PersonalInformation2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OccupationType" class="control-label"></label>
                <input asp-for="OccupationType" class="form-control" />
                <span asp-validation-for="OccupationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation" class="control-label"></label>
                <input asp-for="Occupation" class="form-control" />
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry" class="control-label"></label>
                <input asp-for="Industry" class="form-control" />
                <span asp-validation-for="Industry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotorcycleLicence" class="control-label"></label>
                <input asp-for="MotorcycleLicence" class="form-control" />
                <span asp-validation-for="MotorcycleLicence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateObtained" class="control-label"></label>
                <input asp-for="DateObtained" class="form-control" />
                <span asp-validation-for="DateObtained" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasLicence" /> @Html.DisplayNameFor(model => model.HasLicence)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RidersInsured" class="control-label"></label>
                <input asp-for="RidersInsured" class="form-control" />
                <span asp-validation-for="RidersInsured" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
